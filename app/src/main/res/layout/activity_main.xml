<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/awal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d00e58"
        android:orientation="vertical"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/akhir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8646a6"
        android:alpha="0"
        android:orientation="vertical"
        >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        >


        <TextView
            android:id="@+id/bahasanya"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Pilih Bahasa"
            android:onClick="pilihbahasanya"
            android:clickable="true"

            />


    </RelativeLayout>

    <View
        android:id="@+id/pemisah"
        android:layout_below="@+id/atas"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        ></View>



    <RelativeLayout
        android:id="@+id/logoinstagram"
        android:layout_below="@+id/pemisah"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >



        <ImageView
            android:id="@+id/logonya"
            android:layout_toRightOf="@+id/kiri"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@drawable/instagram_white"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Silahkan mendaftar untuk melihat"
            android:layout_below="@+id/logonya"
            android:textSize="8dp"
            android:gravity="center"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="foto dan video dari teman anda"
            android:layout_below="@+id/text1"
            android:textSize="8dp"
            android:gravity="center"
            android:textColor="#fff"
            />



    </RelativeLayout>


    <View
        android:id="@+id/dibawahlogo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/logoinstagram"
        ></View>

    <LinearLayout
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dibawahlogo"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/latarFacebook"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/logonya"
                android:layout_toRightOf="@+id/kiri"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/fb"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/masukfacebook"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Masuk dengan facebook"
                android:textSize="9dp"
                android:gravity="center"
                android:textColor="#567db1"
                android:textStyle="bold"
                android:onClick="masukLewatFacebook"
                android:clickable="true"
                android:layout_weight="0.05" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/atau"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/facebook"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_marginRight="10dp"
            ></View>

        <TextView
            android:id="@+id/ataunya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="10dp"
            android:text="atau"
            />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_marginLeft="10dp"
            ></View>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/pemisah2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/atau"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/buatakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buat Akun dengan Email atau Nomor Telpon"
            android:textSize="8dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:onClick="buatAkun"
            android:clickable="true"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/syarat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/pemisah2"
        android:orientation="horizontal"
        ></LinearLayout>

    <LinearLayout
        android:id="@+id/pemisah3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/syarat"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/ketentuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7dp"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Dengan mendaftar, Anda menyetujui "
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7dp"
            android:textColor="#fff"
            android:text="Ketentuan"
            android:onClick="ketentuan"
            android:clickable="true"
            android:id="@+id/ketentuannya" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7dp"
            android:textColor="#fff"
            android:text=" &amp; "
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kebijakan Privasi"
            android:textSize="7dp"
            android:textColor="#fff"
            android:onClick="kebijakan"
            android:clickable="true"
            android:id="@+id/kebijakannya" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7dp"
            android:textColor="#fff"
            android:text=" kami"
            />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/punyaakun"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/pemisah3"
        android:orientation="horizontal"
        android:background="#32ffffff"
        android:alpha="0.5"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sudah Punya Akun ?"
            android:textSize="8dp"
            android:textColor="#fff"
            />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/masuk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textSize="8dp"
            android:textColor="#fff"
            android:onClick="masukLangsung"
            android:clickable="true"
            />

    </LinearLayout>

</RelativeLayout>