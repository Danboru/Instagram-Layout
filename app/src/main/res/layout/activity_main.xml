<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/awal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d00e58"
        android:orientation="vertical"
        >


    </LinearLayout>

    <LinearLayout
        android:id="@+id/akhir"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8646a6"
        android:alpha="0"
        android:orientation="vertical"
        >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/testnya"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:text="Bahasa Indonesia"
            android:gravity="center"
            android:textSize="10dp"
            android:textAlignment="center"

            />

    </RelativeLayout>

    <View
        android:id="@+id/pemisah"
        android:layout_below="@+id/atas"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        ></View>



    <RelativeLayout
        android:id="@+id/logoinstagram"
        android:layout_below="@+id/pemisah"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <View
            android:id="@+id/kiri"
            android:layout_alignParentLeft="true"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            ></View>

        <ImageView
            android:id="@+id/logonya"
            android:layout_toRightOf="@+id/kiri"
            android:layout_width="130dp"
            android:layout_height="70dp"
            android:src="@drawable/instagram_white"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Silahkan mendaftar untuk melihat"
            android:layout_below="@+id/logonya"
            android:textSize="8dp"
            android:gravity="center"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="foto dan video dari teman anda"
            android:layout_below="@+id/text1"
            android:textSize="8dp"
            android:gravity="center"
            android:textColor="#fff"
            />

        <View
            android:id="@+id/kanan"
            android:layout_toRightOf="@+id/logonya"
            android:layout_width="145dp"
            android:layout_height="match_parent"
            ></View>

    </RelativeLayout>


    <View
        android:id="@+id/dibawahlogo"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@id/logoinstagram"
        ></View>

    <LinearLayout
        android:id="@+id/facebook"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/dibawahlogo"
        android:gravity="center"
        >

        <LinearLayout
            android:id="@+id/latarFacebook"
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:background="#fff"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/logonya"
                android:layout_toRightOf="@+id/kiri"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/fb"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/masukfacebook"
                android:layout_width="126dp"
                android:layout_height="match_parent"
                android:text="Masuk dengan facebook"
                android:textSize="10dp"
                android:gravity="center"
                android:textColor="#567db1"
                android:textStyle="bold"
                android:onClick="masukFacebook"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>