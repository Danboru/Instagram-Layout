<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.danboru.instagram.FacebookLogin"
    android:orientation="vertical"
    android:background="#eceff5"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/latarfacebook_logo"
        android:background="#3b5998"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/social_facebook"
            />
        
    </LinearLayout>


    <View
        android:id="@+id/pemisah"
        android:layout_width="match_parent"
        android:layout_height="40dp"></View>

    <LinearLayout
        android:id="@+id/logonya_insta"
        android:background="#eceff5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/insta_facebook"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="vertical"
        android:background="#eceff5"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/satu"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#a0a4ac"
            android:text="Masuk ke akun Facebook Anda untuk"
            />

        <TextView
            android:id="@+id/dua"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textColor="#a0a4ac"
            android:textSize="13dp"
            android:gravity="center"
            android:text="terhubung dengan Instagram"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="90dp"
            android:background="@drawable/latar_facebook"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:textColor="#b5b5b5"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="Email atau Telepon"
                    android:textSize="13dp"
                    android:paddingLeft="15dp"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d4d4d4"
                ></View>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="90dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Kata Sandi Facebook"
                        android:background="@android:color/transparent"

                        android:textColor="#b5b5b5"
                        android:textSize="13dp"
                        android:paddingLeft="15dp"

                        />

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:id="@+id/tombol_facebook"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="40dp"
        >

        <Button
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tombol_facebook"
            android:text="Masuk"
            android:textColor="#fff"
            android:textSize="15dp"
            android:onClick="masuk_ke_facebook"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Lupa Kata Sandi ?"
            android:textColor="#a0a4ac"
            android:onClick="lupasandi"
            android:clickable="true"
            android:id="@+id/lupa" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="#a0a4ac"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="Pusat Bantuan"
            android:clickable="true"
            android:textColor="#a0a4ac"
            android:onClick="bantuanmasuk"
            android:id="@+id/bantuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="#a0a4ac"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:clickable="true"
            android:text="Buat Akun"
            android:textColor="#a0a4ac"
            android:onClick="buatakun"
            android:id="@+id/buat" />

    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="90dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        >

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Facebok &#169; 2016"
            android:textSize="12dp"
            android:textColor="#a0a4ac"
            />

    </LinearLayout>

</LinearLayout>